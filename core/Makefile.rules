PREFIX:=arm-none-eabi-
CC:=$(PREFIX)gcc
OBJCOPY:=$(PREFIX)objcopy
OBJDUMP:=$(PREFIX)objdump
GDB:=$(PREFIX)gdb
JLINK:=$(SEGGER)JLinkExe
JLINK_VIEWER:=$(SEGGER)JLinkSWOViewer
JLINK_VIEWER_MASK:=0x3
AUXHFRCO_FREQ:=14000000

CORE:=../core

SYSTEM:=$(CORE)/system
LIB:=$(CORE)/lib
DEVICE:=$(CORE)/arch/$(ARCH)
SOURCES:=$(SYSTEM)/src/isr.c \
         $(SYSTEM)/src/stdlib.c \
         $(LIB)/printf/tfp_printf.c \
         $(DEVICE)/src/system.c \
         $(APP_SRC)

DEBUG_HOST:=localhost:2331
OPT:=-Os
DEBUG:=-g3 -DNDEBUG
WARNING:=-Wall -Werror
CPU_LOWER:=$(shell tr '[:upper:]' '[:lower:]' <<< $(CPU))
ARCH_LOWER:=$(shell tr '[:upper:]' '[:lower:]' <<< $(ARCH))
FLASH_OFFSET:=0

FLAGS_CM3:=-mcpu=cortex-m3 -mthumb

LDFLAGS:=$(FLAGS_CM3) \
        -T$(PROJECT).linker \
        -nostartfiles \
        -nostdlib \
        -Xlinker --gc-sections \
        -Xlinker -M \
        -Xlinker -Map=$(PROJECT).map

CFLAGS_PRE:=\
        $(OPT) \
        $(DEBUG) \
        $(WARNING) \
        -D$(ARCH) \
        -D$(CPU) \
        $(APP_CFLAGS) \
        -I$(CORE) \
        -I$(CORE)/cmsis/inc \
        -I$(SYSTEM)/inc \
        -I$(DEVICE)/inc \
        -I$(LIB)/printf \
        -ffunction-sections \
        -fdata-sections \
        -fno-common

CFLAGS:=$(FLAGS_CM3) $(CFLAGS_PRE)

OBJS:=$(SOURCES:.c=.o)

.PHONY: debug gdb gdbtui flash erase reset ctags source.c.tags swo

all: $(PROJECT).bin

$(PROJECT).elf: $(OBJS) $(PROJECT).linker
	$(CC) $(LDFLAGS) -o $@ $(OBJS)
	$(OBJDUMP) -d $@ > $(PROJECT).asm

$(PROJECT).bin: $(PROJECT).elf
	$(OBJCOPY) $< -O binary $@

$(PROJECT).linker: $(CORE)/linker/$(CPU).h
	$(CPP) -w -P -I$(CORE) -I$(CORE)/linker $(APP_CFLAGS) -D$(CPU) -D$(ARCH) $^ -o $@

swo:
	$(JLINK_VIEWER) -device $(CPU) -cpufreq $(AUXHFRCO_FREQ) -itmmask $(JLINK_VIEWER_MASK)

gdb: gdb.script
	$(GDB) -x $<

gdbtui: gdb.script
	$(GDB)tui -x $<

ctags: source.c.tags

source.c.tags: $(SOURCES)
	CFLAGS="$(CFLAGS_PRE)" geany -g $@ $^

gdb.script: $(PROJECT).elf
	echo -e "\
target remote $(DEBUG_HOST)\n\
monitor endian little\n\
monitor halt\n\
monitor speed 1000\n\
monitor SWO EnableTarget $(AUXHFRCO_FREQ) 0 $(JLINK_VIEWER_MASK) 0\n\
monitor flash device = $(CPU)\n\
load $<\n\
file $<\n\
monitor reset\n\
b main_entry\n\
b default_handler\n\
" > $@

flash: $(PROJECT).bin
	@echo -e "\
device $(CPU)\n\
h\n\
loadbin $^ $(FLASH_OFFSET)\n\
r\n\
g\n\
q\n\
" | $(JLINK)

erase:
	@echo -e "\
device $(CPU)\n\
h\n\
r\n\
erase\n\
g\n\
q\n\
" | $(JLINK)

reset:
	@echo -e "\
device $(CPU)\n\
h\n\
r\n\
g\n\
q\n\
" | $(JLINK)

clean:
	rm -f $(PROJECT).map $(PROJECT).elf $(PROJECT).bin $(PROJECT).asm  $(PROJECT).linker gdb.script source.c.tags JLink.log
	find . $(CORE) -iname '*.o' -exec rm -f \{\} \;
