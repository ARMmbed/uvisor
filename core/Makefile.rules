PREFIX:=arm-none-eabi-
CC:=$(PREFIX)gcc
OBJCOPY:=$(PREFIX)objcopy
OBJDUMP:=$(PREFIX)objdump

CORE:=../core

SYSTEM:=$(CORE)/system
LIB:=$(CORE)/lib
DEVICE:=$(CORE)/arch/$(ARCH)
SOURCES:=$(SYSTEM)/src/isr.c \
         $(SYSTEM)/src/reset.c \
         $(LIB)/printf/tfp_printf.c \
         $(DEVICE)/src/system.c \
         $(APP_SRC)

OPT:=-Os
DEBUG:=-g

FLAGS_CM3:=-mcpu=cortex-m3 -mthumb

LDFLAGS:=$(FLAGS_CM3) \
        -L$(CORE)/linker \
        -T$(CPU).ld \
        -nostartfiles \
        -nostdlib \
        -Xlinker --gc-sections \
        -Xlinker -M \
        -Xlinker -Map=$(PROJECT).map

CFLAGS:=$(OPT) $(DEBUG) $(FLAGS_CM3) \
        -ffunction-sections \
        -fdata-sections \
        -fno-common \
        -D$(CPU) \
        -I$(CORE)/cmsis/inc \
        -I$(CORE) -I$(SYSTEM)/inc -Iconfig \
        -I$(DEVICE)/inc \
        -I$(LIB)/printf \
        $(APP_CFLAGS)

OBJS:=$(SOURCES:.c=.o)

all: $(PROJECT).bin

$(PROJECT).elf: $(OBJS)
	$(CC) $(LDFLAGS) -o $@ $^
	$(OBJDUMP) -S $@ > $(PROJECT).asm

$(PROJECT).bin: $(PROJECT).elf
	$(OBJCOPY) $< -O binary $@

clean:
	rm -f $(PROJECT).map $(PROJECT).elf $(PROJECT).bin $(PROJECT).asm
	find . $(CORE) -iname '*.o' -exec rm -f \{\} \;
